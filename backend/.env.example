# TaskStudy Backend Environment Variables
# Copy to .env and replace the placeholder values before running locally or deploying.

# Server
PORT=5000
NODE_ENV=development

# Database
# For local development with SQLite
DATABASE_URL="file:./dev.db"
# For production (example for Render PostgreSQL)
# DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public"

# Authentication
JWT_SECRET=replace-with-strong-secret

# Email (SMTP)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=replace-with-smtp-user
SMTP_PASS=replace-with-smtp-password
SMTP_SECURE=false
SMTP_FROM="TaskStudy <no-reply@taskstudy.app>"

# Client
CLIENT_URL=http://localhost:5173

# Google OAuth
GOOGLE_CLIENT_ID=replace-with-google-client-id

# Logging
LOG_LEVEL=info

# Telegram Notifications
TELEGRAM_BOT_TOKEN=replace-with-telegram-bot-token
TELEGRAM_DEFAULT_CHAT_ID=123456789
TELEGRAM_BOT_USERNAME=taskstudy_bot