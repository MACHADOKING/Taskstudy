generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TaskType {
  ASSIGNMENT
  EXAM
  READING
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum Status {
  PENDING
  COMPLETED
}

enum AuthProvider {
  LOCAL
  GOOGLE
}

enum NotificationType {
  DAILY_SUMMARY
  URGENT_ALERT
}
  priority    Priority @default(MEDIUM)
  status      Status   @default(PENDING)
  attachments Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("tasks")
}

enum TaskType {
  ASSIGNMENT
  EXAM
  READING

  @@map("task_type")
}

enum Priority {
  LOW
  MEDIUM
  HIGH

  @@map("priority")
}

enum Status {
  PENDING
  COMPLETED

  @@map("status")
}

enum AuthProvider {
  LOCAL
  GOOGLE

  @@map("auth_provider")
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      NotificationType
  title     String
  message   String
  payload   Json?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId, read, createdAt])
  @@map("notifications")
}

enum NotificationType {
  DAILY_SUMMARY
  URGENT_ALERT

  @@map("notification_type")
}